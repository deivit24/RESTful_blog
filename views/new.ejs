<% include ./partials/header %>
	<div class="container box-shadow">
		<h1>
			New Blog
		</h1>
		<form action="/blogs" method="POST">
			 <div class="form-group">
   			<label><strong>Title</strong></label>
			<input type="text" class="form-control" name="blog[title]" placeholder="title" required>
			
		  </div>
		  <div class="form-group">
			<label><strong>Image</strong></label>	
			<input type="text" class="form-control" name="blog[image]" placeholder="image from url" required>
		  </div>
			<div class="form-group">
			<label><strong>Blog Content</strong></label>
			<textarea class="form-control" name="blog[body]" rows="3" placeholder="Start writing post" required>		</textarea>
		  </div>

		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
</div>
<% include ./partials/footer %>