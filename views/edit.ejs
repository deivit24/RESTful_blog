<% include ./partials/header %>
	<div class="container box-shadow">
		<h1>
			Edit <%=blog.title %>
		</h1>
		<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
			 <div class="form-group">
   			<label><strong>Title</strong></label>
			<input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>" required>
			
		  </div>
		  <div class="form-group">
			<label><strong>Image</strong></label>	
			<input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>" required>
		  </div>
			<div class="form-group">
			<label><strong>Blog Content</strong></label>
			<textarea class="form-control" name="blog[body]" rows="3" placeholder="Start writing post" required><%= blog.body %>		</textarea>
		  </div>

		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
</div>
<% include ./partials/footer %>